<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- AppBar with enhanced design -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/toolbar_gradient"
            android:elevation="8dp"
            app:navigationIcon="@drawable/ic_back_white"
            app:title="My Profile"
            app:titleTextAppearance="@style/ToolbarTitleStyle"
            app:titleTextColor="@android:color/white">

            <!-- Logout Button in Toolbar -->
            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Logout"
                android:padding="12dp"
                android:src="@drawable/ic_logout"
                app:tint="@android:color/white" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Enhanced Profile Header Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient_background"
                    android:padding="24dp">

                    <!-- Enhanced Profile Image with border -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileImageCard"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_placeholder_gradient"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView" />

                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Edit Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:contentDescription="Edit Profile"
                        android:src="@drawable/ic_edit"
                        app:backgroundTint="#FF6B35"
                        app:elevation="6dp"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="@id/profileImageCard"
                        app:layout_constraintEnd_toEndOf="@id/profileImageCard"
                        app:tint="@android:color/white" />

                    <!-- User Name Display -->
                    <TextView
                        android:id="@+id/userNameDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="John Doe"
                        android:textColor="#2C3E50"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profileImageCard" />

                    <!-- User Email Display -->
                    <TextView
                        android:id="@+id/userEmailDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="john.doe@company.com"
                        android:textColor="#7F8C8D"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userNameDisplay" />

                    <!-- Enhanced Avatar Chips -->
                    <HorizontalScrollView
                        android:id="@+id/avatarScroll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userEmailDisplay">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/avatarGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/avatar1"
                                style="@style/CustomAvatarChipStyle"
                                android:text="Avatar 1"
                                app:chipIcon="@drawable/avatar_1" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/avatar2"
                                style="@style/CustomAvatarChipStyle"
                                android:text="Avatar 2"
                                app:chipIcon="@drawable/avatar_2" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/avatar3"
                                style="@style/CustomAvatarChipStyle"
                                android:text="Avatar 3"
                                app:chipIcon="@drawable/avatar_3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/avatar4"
                                style="@style/CustomAvatarChipStyle"
                                android:text="Avatar 4"
                                app:chipIcon="@drawable/avatar_4" />

                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Personal Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/infoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_person_outline"
                            app:tint="#0077b6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Personal Information"
                            android:textColor="#2C3E50"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- Enhanced Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameInputLayout"
                        style="@style/CustomTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Full Name"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#0077b6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enhanced Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailInputLayout"
                        style="@style/CustomTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Email Address"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="#0077b6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enhanced Phone Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneInputLayout"
                        style="@style/CustomTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Phone Number"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="#0077b6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="phone"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enhanced Department Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/departmentInputLayout"
                        style="@style/CustomTextInputLayoutStyle.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Department"
                        app:startIconDrawable="@drawable/ic_business"
                        app:startIconTint="#0077b6">

                        <AutoCompleteTextView
                            android:id="@+id/departmentInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoCard">

                <!-- Save Changes Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#0077b6"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    app:elevation="6dp"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogoutMain"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="#E74C3C"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_logout_outline"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#E74C3C"
                    app:strokeColor="#E74C3C"
                    app:strokeWidth="2dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Logout Confirmation -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabQuickLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Quick Logout"
        android:visibility="gone"
        app:backgroundTint="#E74C3C"
        app:icon="@drawable/ic_logout"
        app:iconTint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>