<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CollabPortal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorPrimaryDark">@color/md_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.CollabPortal.NoActionBar" parent="Theme.CollabPortal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Circle ImageView Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- CardElev Style -->
    <style name="CardElev" parent="">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Custom Text Input Layout Style -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/md_primary</item>
        <item name="hintTextColor">@color/md_primary</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/md_primary</item>
        <item name="hintTextColor">@color/md_primary</item>
    </style>

    <!-- Custom Avatar Chip Style -->
    <style name="CustomAvatarChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@null</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/md_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- Splash theme should inherit from MaterialComponents so Material widgets (TextInputLayout, etc.) work correctly -->
    <style name="Theme.CollabPortal.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowSplashScreenBackground">@color/splash_screen_background</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Logo animation er duration milliseconds e (1000 = 1 second) -->
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!-- Optional icon background if logo has transparency -->
        <!-- <item name="windowSplashScreenIconBackground">@color/white</item> -->
    </style>
</resources>